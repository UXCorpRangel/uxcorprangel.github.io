{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],

      "@contracts/*": ["./src/contracts/*"],
      "@contracts": ["./src/contracts"],

      "@data/*": ["./src/data/*"],
      "@data": ["./src/data/"],

      "@icons/*": ["./src/components/icons/*"],
      "@icons": ["./src/components/icons"],

      "@layouts/*": ["./src/layouts/*"],
      "@layouts": ["./src/layouts"],

      "@scripts/*": ["./src/scripts/*"],
      "@scripts": ["./src/scripts"],

      "@sections/*": ["./src/sections/*"],
      "@sections": ["./src/sections"]
    }
  }
}
