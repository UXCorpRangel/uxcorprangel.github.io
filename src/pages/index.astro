<style>
  main {
    width: min(80rem, 100vw);

    section {
      height: 100dvh;

      gap: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;

      &:nth-child(2) {
        background-color: var(--magic-mint-color);
      }

      &:nth-child(3) {
        background-color: var(--saffron-color);
      }

      &:nth-child(4) {
        background-color: var(--mauve-color);
      }

      &:nth-child(5) {
        background-color: var(--alt-text-color);
      }

      &:nth-child(6) {
        background-color: var(--cinnabar-color);
      }
    }
  }
</style>
