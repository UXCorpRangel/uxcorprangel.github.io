    <section>
      <Button label="Only text" link="#" />
      <Button label="Green shadow" link="#" shadow="green" />
      <Button label="Green shadow with icon" link="#" shadow="green" icon="socials/linkedin" />
      <Button label="With icon" link="#" icon="user-star" />
      <Button label="Only icon" link="#" icon="socials/github" hideLabel />
