<style>
  header {
    color: rgb(0 0 0);
    padding-top: 1.25rem;
    padding-bottom: 1.25rem;
    background-color: rgb(255 255 255);
    border-style: solid;
    border-color: rgb(0 0 0);
    border-top-width: 2px;
    border-bottom-width: 2px;
    height: 96px;
    z-index: 40;
    top: 0px;
    left: 0px;
    right: 0px;
    position: fixed;

    & .container {
      padding-left: 1rem;
      padding-right: 1rem;
      justify-content: space-between;
      align-items: center;
      display: flex;
      margin-left: auto;
      margin-right: auto;
      width: 100%;

      @media (width >= 1024px) {
        padding-left: 2rem;
        padding-right: 2rem;
      }

      & h1 {
        font-weight: 800;
        font-size: 1.875rem;
        line-height: 2.25rem;
      }

      #target-nav {
        text-transform: uppercase;
        transition-duration: 300ms;
        transform: translate(var(--tw-translate-x), 0) rotate(0) skewX(0) skewY(0) scaleX(1) scaleY(1);

        @media (width < 1024px) {
          --tw-bg-opacity: 1;
          background-color: rgb(255 255 255 / var(--tw-bg-opacity));
          --tw-border-opacity: 1;
          border-color: rgb(0 0 0 / var(--tw-border-opacity));
          border-right-width: 2px;
          --tw-translate-x: -100%;
          width: 18rem;
          z-index: 50;
          left: 0px;
          top: 0px;
          bottom: 0px;
          position: fixed;
        }

        & nav {
          @media (width < 1024px) {
            overflow: auto;
            flex-direction: column;
            height: 100%;
            display: flex;
          }

          @media (width >= 1024px) {
            margin-left: 1rem;
          }

          a {
            @media (width < 1024px) {
              padding-top: 0.75rem;
              padding-bottom: 0.75rem;
              padding-left: 1rem;
              padding-right: 1rem;
              border-color: rgb(0 0 0);
              border-bottom-width: 1px;
            }

            &:hover,
            &.active {
              color: rgb(0 166 162);
            }
          }
        }
      }
    }
  }

  footer {
    color: rgb(255 255 255);
    padding-top: 2rem;
    padding-bottom: 2rem;
    background-color: rgb(0 0 0);

    & .container {
      padding-left: 1rem;
      padding-right: 1rem;
      margin-left: auto;
      margin-right: auto;
      width: 100%;

      @media (width >= 1024px) {
        padding-left: 2rem;
        padding-right: 2rem;
      }

      & div {
        display: flex;
        flex-direction: column;
        gap: 2rem;

        @media (width >= 768px) {
          flex-direction: row;
          justify-content: space-between;
        }

        @media (width < 768px) {
          text-align: center;
          justify-content: center;
        }

        & nav {
          display: flex;
          flex-direction: column;

          @media (width >= 768px) {
            margin-left: auto;
            margin-right: auto;
          }
          @media (width < 768px) {
            flex-direction: column;
          }

          & a {
            padding-left: 0.5rem;
            padding-right: 0.5rem;

            @media (width < 640px) {
              padding-top: 0.5rem;
              padding-bottom: 0.5rem;
            }
          }
        }

        & p {
          margin: 0;
        }
      }
    }
  }

  main {
    section {
      height: 100vh;

      &:nth-child(2) {
        background-color: var(--primary-color);
      }

      &:nth-child(3) {
        background-color: var(--secondary-color);
      }

      &:nth-child(4) {
        background-color: var(--tertiary-color);
      }
    }
  }
</style>
