const total = data.length;

const view = (position: number) => {
  const calc = (100 * (position + 10)) / (total + 10) / 100;
  const minmax = (value: number, min: number, max: number) => {
    return Math.min(Math.max(value, min), max);
  };
  return minmax(calc, 0, 1);
};

const isPar = (num: number) => num % 2 === 0;
---

<section class="team">
  <h2 class="team--title">EQUIPO</h2>

  {
    data.map(({ name, img, tags, socials }, i) => (
      <div
        class="team__card"
        style={`--scale-to: ${view(i + 1)};top:calc(var(--top-base) + ${i * 0.95}rem); --order: ${isPar(i) ? 0 : 1};--border-img: ${isPar(i) ? '0 2px 0 0' : '0 0 0 2px'}`}
      >
        <img src={`/assets/team/${img}.png`} alt={name} class="team__card-img" />
