          <h2>{name}</h2>
          <p>
            Lorem ipsum dolor sit amet consectetur. Velit tristique viverra enim diam cursus. Justo varius sit convallis id eu duis. Amet lectus
            semper suspendisse enim. Imperdiet id mauris sagittis nunc platea aliquet aenean faucibus est.
          </p>
          <div class="team__card-tags">
            {tags.map(tag => (
              <span class="team__card-tag">{tag}</span>
            ))}
          </div>
          <div class="team__card-social">
            {socials.map(({ name, link, nameIcon, color }) => (
              <LinkButton
                external
                label={name}
                icon={`socials/${nameIcon}`}
                link={link}
                shadow="green"
                bgColor={color}
                textColor="var(--text-color)"
              />
            ))}
          </div>
        </div>
      </div>
    ))
  }
</section>

<style>
  @custom-media --col-viewport (max-width: 940px);

  .team {
    min-height: 100dvh;
    max-width: 1129px;
    margin-inline: auto;
    padding: 8rem clamp(1rem, 5vw, 4rem);
    position: relative;
    --top-base: 10rem;
    display: grid;
    gap: clamp(2rem, 10vw, 3rem);

    .team--title {
      font-family: Titan One;
      font-size: 70px;
      font-weight: 400;
      line-height: 80.15px;
      text-align: center;
      position: sticky;
      top: calc(var(--top-base) / 2);

      @media (--col-viewport) {
        position: initial;
      }
    }
  }

  .team__card {
    position: sticky;
    display: flex;
    background: var(--mauve-color);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 4px 4px 0px 0px #39ed81;
    border: 2px solid #04011c;

    @media (--col-viewport) {
      flex-direction: column;
      max-width: 400.99px;
      margin-inline: auto;
      position: initial !important;
    }
  }

  .team__card-img {
    order: var(--order);
    flex: 1;
    aspect-ratio: 1 / 1;
    border: solid #04011c;
    border-width: var(--border-img);
    max-width: 425px;

    @media (--col-viewport) {
      border-width: 0 0 2px 0;
      order: 0;
    }
  }

  .team__card-info {
    flex: 2;
    padding: 1rem;
    color: #04011c;
    display: grid;
    grid-template-rows: auto auto auto 1fr;
    gap: 1rem;

    h2 {
      font-family: var(--main-font-family);
      font-size: 32px;
      font-weight: 500;
      line-height: 80.8px;
      text-align: left;
      order: 0;
    }

    p {
      font-size: 20px;
      font-weight: 500;
      line-height: 25.5px;
      max-width: 666px;
    }
  }

  .team__card {
    animation-name: scale;
    animation-duration: 1ms;
    animation-direction: alternate;
    animation-timing-function: cubic-bezier(0.075, 0.82, 0.165, 1);
    animation-timeline: view(6rem 6.1rem);
    transform-origin: 50% 4.5rem;

    @media (--col-viewport) {
      animation: none;
      animation-timeline: none;
      position: relative;
    }
  }

  @keyframes scale {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(var(--scale-to));
    }
  }

  .team__card-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;

    @media (--col-viewport) {
      grid-row: 2;
    }
  }
  .team__card-tag {
    background: #2e58ff;
    border: 2px solid #04011c;
    font-size: 16px;
    font-weight: 500;
    line-height: 10.75px;
    border-radius: 9999px;
    box-shadow: 4px 4px 0px 0px #04011c;
    padding: 0.5rem 0.6rem;
    color: #fff;
    text-transform: capitalize;
  }

  .team__card-social {
    display: flex;
    flex-wrap: wrap;
    align-self: end;
    gap: 1rem;
  }
</style>
